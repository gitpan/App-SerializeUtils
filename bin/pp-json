#!/usr/bin/perl

package pp_json; # make PodWeaver happy

use 5.010;
use strict;
use warnings;

use JSON;

our $VERSION = '0.04'; # VERSION

undef $/;
print to_json(from_json(scalar <>), {pretty=>1});

1;
#ABSTRACT: Pretty-print JSON

__END__

=pod

=head1 NAME

pp_json - Pretty-print JSON

=head1 VERSION

version 0.04

