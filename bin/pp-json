#!/usr/bin/perl

package php2json;
BEGIN {
  $php2json::VERSION = '0.02';
} # make PodWeaver happy

use 5.010;
use strict;
use warnings;

use JSON;

# VERSION

undef $/;
print to_json(from_json(scalar <>), {pretty=>1});

1;
#ABSTRACT: Pretty-print JSON

__END__
=pod

=head1 NAME

php2json - Pretty-print JSON

=head1 VERSION

version 0.02

