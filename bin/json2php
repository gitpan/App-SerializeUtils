#!/usr/bin/perl

package json2php;
BEGIN {
  $json2php::VERSION = '0.02';
} # make PodWeaver happy

use 5.010;
use strict;
use warnings;

use JSON;
use PHP::Serialization qw(serialize);

# VERSION

undef $/;
print serialize(from_json(scalar <>));

1;
#ABSTRACT: Convert JSON to PHP serialization

__END__
=pod

=head1 NAME

json2php - Convert JSON to PHP serialization

=head1 VERSION

version 0.02

