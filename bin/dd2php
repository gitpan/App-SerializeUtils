#!/usr/bin/perl

package dd2php; # make PodWeaver happy

use 5.010;
use strict;
use warnings;

use PHP::Serialization qw(serialize);

our $VERSION = '0.03'; # VERSION

undef $/;
print serialize(eval(scalar <>));

1;
#ABSTRACT: Convert Data::Dump to PHP serialization

__END__

=pod

=head1 NAME

dd2php - Convert Data::Dump to PHP serialization

=head1 VERSION

version 0.03

