#!/usr/bin/perl

use 5.010;
use strict;
use warnings;

use PHP::Serialization qw(serialize);

our $VERSION = '0.05'; # VERSION

undef $/;
print serialize(eval(scalar <>));

1;
#ABSTRACT: Convert Data::Dump to PHP serialization
#PODNAME: dd2phpser

__END__

=pod

=encoding utf-8

=head1 NAME

dd2phpser - Convert Data::Dump to PHP serialization

