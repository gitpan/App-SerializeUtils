#!/usr/bin/perl

package yaml2php; # make PodWeaver happy1

use 5.010;
use strict;
use warnings;

use YAML::Syck; $YAML::Syck::ImplicitTyping = 1;
use PHP::Serialization qw(serialize);

our $VERSION = '0.03'; # VERSION

undef $/;
print serialize(Load(scalar <>));

1;
#ABSTRACT: Convert YAML to PHP serialization

__END__

=pod

=head1 NAME

yaml2php - Convert YAML to PHP serialization

=head1 VERSION

version 0.03

