#!/usr/bin/perl

package php2json; # make PodWeaver happy

use 5.010;
use strict;
use warnings;

use JSON;
use PHP::Serialization qw(unserialize);

our $VERSION = '0.04'; # VERSION

undef $/;
print to_json(unserialize(scalar <>));

1;
#ABSTRACT: Convert PHP to JSON serialization

__END__

=pod

=head1 NAME

php2json - Convert PHP to JSON serialization

=head1 VERSION

version 0.04

